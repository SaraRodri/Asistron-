<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#b0dde1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:ignore="ExtraText">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:layout_marginBottom="20dp"
            android:background="#e7e7e7"
            android:gravity="center"
            android:text="AsistrÃ³n"
            android:textAlignment="center"
            android:textColor="#142157"
            android:textIsSelectable="false"
            android:textSize="40sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/crearH"
            android:layout_width="320dp"
            android:layout_height="580dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/borde_redondo_gris"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/nombreH"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="#008F0A0A"
                    android:baselineAligned="false"
                    android:hint="Aprendiendo a nadar"
                    android:textColor="#000000"
                    android:textSize="26sp"
                    android:textStyle="bold" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borde_redondo_boton"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:background="#008F0A0A"
                    android:baselineAligned="false"
                    android:layout_marginLeft="12dp"
                    android:text="Lunes"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/Lun"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    tools:checked="true"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borde_redondo_boton"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:background="#008F0A0A"
                    android:baselineAligned="false"
                    android:layout_marginLeft="12dp"
                    android:text="Martes"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/Mar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    tools:checked="true"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borde_redondo_boton"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:background="#008F0A0A"
                    android:baselineAligned="false"
                    android:layout_marginLeft="12dp"
                    android:text="Miercoles"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/Mie"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    tools:checked="false"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borde_redondo_boton"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:background="#008F0A0A"
                    android:baselineAligned="false"
                    android:layout_marginLeft="12dp"
                    android:text="Jueves"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/Jue"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    tools:checked="true"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borde_redondo_boton"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:background="#008F0A0A"
                    android:baselineAligned="false"
                    android:layout_marginLeft="12dp"
                    android:text="Viernes"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/Vie"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    tools:checked="true"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borde_redondo_boton"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:background="#008F0A0A"
                    android:baselineAligned="false"
                    android:layout_marginLeft="12dp"
                    android:text="Sabado"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/Sab"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:checked="false"
                    android:clickable="true"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borde_redondo_boton"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:background="#008F0A0A"
                    android:baselineAligned="false"
                    android:layout_marginLeft="12dp"
                    android:text="Domingo"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/Dom"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    tools:checked="false"
                    android:text="" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Hora Inicio: "
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/horaI"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:hint="00:00am"
                    android:textStyle="bold"
                    android:textSize="20dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hora Fin: "
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textColor="#000000" />
                <EditText
                    android:id="@+id/horaF"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:hint="00:00am"
                    android:textStyle="bold"
                    android:textSize="20dp"/>


            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/crearHorario"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/borde_redondo_boton"
            android:text="@string/crear_horario"
            android:onClick="crearHorario"
            android:textColor="@android:color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#B0DDE1"
            android:gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/volverHorario"
                android:onClick="Volvermenu_h"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/borde_redondo_boton"
                android:text="Volver"
                android:layout_marginLeft="45dp"
                android:layout_marginBottom="14dp"
                android:textColor="@android:color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#B0DDE1"
                android:gravity="bottom|right"
                android:orientation="vertical">

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>